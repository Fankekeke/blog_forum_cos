<!--状态栏区域-->
<view class="cu-custom" style="height:{{CustomBar}}px;">
    <view class="cu-bar fixed none-bg text-white bg-img" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
        <navigator class='action canui-head-title' open-type="navigateBack" delta="1" hover-class="none">
            <text class='icon-back'></text> 用户详情
        </navigator>
    </view>
</view>

<view class="box" style="top: {{CustomBar}}px;">
    <view class="cu-list menu menu-avatar">
        <view class="cu-item">
            <view class="cu-avatar radius lg" style="background-image:url({{ shopInfo.avatar }});"></view>
            <view class='content'>
                <view class='text-grey'>{{ shopInfo.name }}</view>
                <view class='text-gray text-sm'>用户编号：{{ shopInfo.code }}</view>
            </view>
        </view>
        <view class="cu-item canui-jsd">
            <view class='text-gray text-sm'>{{ shopInfo.remark ? shopInfo.remark : '暂无备注' }}</view>
        </view>
    </view>

    <view class="cu-bar bg-white solid-bottom margin-top">
        <view class='action'>
            <text class='icon-title text-red'></text> 用户信息
        </view>
    </view>
    <view class="cu-list menu">
        <view class="cu-item">
            <view class='content'>
                <text class='text-gray'>用户名称</text>
            </view>
            <view class='action'>
                <text class='text-gray text-sm'>{{ shopInfo.name }}</text>
            </view>
        </view>
        <view class="cu-item">
            <view class='content'>
                <text class='text-gray'>职业</text>
            </view>
            <view class='action'>
                <text class='text-gray text-sm'>{{ shopInfo.profession }}</text>
            </view>
        </view>
        <view class="cu-item">
            <view class='content'>
                <text class='text-gray'>所在城市</text>
            </view>
            <view class='action'>
                <text class='text-gray text-sm'>{{ shopInfo.area }}</text>
            </view>
        </view>
        <view class="cu-item">
            <view class='content'>
                <text class='text-gray'>注册时间</text>
            </view>
            <view class='action'>
                <text class='text-gray text-sm'>{{ shopInfo.createDate }}</text>
            </view>
        </view>
    </view>
</view>